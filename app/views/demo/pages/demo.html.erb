<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-4xl font-bold text-gray-900 mb-8"><%= current_page.title %></h1>
  
  <div class="space-y-8">
    <div class="bg-white shadow rounded-lg p-6">
      <%= content :option %>
    </div>

    <div class="prose prose-lg max-w-none">
      <div class="mb-6">
        <%= content :headline %>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= content.text :headline %></h2>
        <div class="prose prose-lg prose-gray">
          <%= content(:body).html_safe %>
        </div>
      </div>

      <% if has_content?(:image) %>
        <div class="mt-6">
          <%= content.image_tag :image, {resize_to_fill: [100, 100]}, {class: "rounded-lg shadow-md"} %>
        </div>
      <% end %>
    </div>

    <div class="border-t border-gray-200 pt-6">
      <%= current_spina_account.content :line %>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% repeater current_spina_account.content(:repeater) do |repeater_content| %>
        <div class="bg-white rounded-lg shadow p-6 prose">
          <%= repeater_content.content :line %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-wrap gap-4">
      <% if has_content?(:image_collection) %>
        <% content(:image_collection).each do |image| %>
          <div class="relative">
            <%= content.image_tag image, {resize_to_fill: [50, 50]}, {class: "rounded-md shadow-sm hover:shadow-lg transition-shadow duration-200"} %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="space-y-6">
      <% repeater :repeater do |project| %>
        <div class="bg-white rounded-lg shadow-md p-6 flex items-start space-x-4">
          <% if project.has_content?(:image) %>
            <%= project.content.image_tag :image, {resize_to_fill: [50, 50]}, {class: "rounded-md flex-shrink-0"} %>
          <% end %>
          <div class="flex-1 prose">
            <%= project.content.html :line %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
