<div class="min-h-screen" data-controller="homepage">
  <!-- Hero Section -->
  <div class="relative min-h-screen flex items-center bg-gradient-to-br from-gray-900 to-gray-800 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-20">
      <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-16">
        <div class="flex-1 text-center lg:text-left space-y-6 sm:space-y-8" data-aos="fade-up">
          <div class="inline-block">
            <span class="bg-primary/10 text-primary rounded-full py-2 px-4 text-sm font-medium">
              <%= t('home.hero.subtitle') %>
            </span>
          </div>
          
          <h1 class="text-3xl sm:text-4xl lg:text-7xl font-bold text-white leading-tight">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-300">
              <%= t('home.hero.title') %>
            </span>
          </h1>
          
          <p class="text-lg sm:text-xl text-gray-400 max-w-2xl mx-auto lg:mx-0">
            <%= t('home.hero.description') %>
          </p>
          
          <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
            <a href="#work" class="group w-full sm:w-auto px-8 py-4 bg-primary text-white rounded-xl font-medium inline-flex items-center justify-center transition-all hover:bg-primary-dark">
              <%= t('home.hero.cta.view_work') %>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="#contact" class="group w-full sm:w-auto px-8 py-4 border border-gray-700 text-white rounded-xl font-medium inline-flex items-center justify-center hover:bg-white/5 transition-all">
              <%= t('home.hero.cta.get_in_touch') %>
            </a>
          </div>
        </div>
        
        <div class="flex-1 relative w-full max-w-lg lg:max-w-none mx-auto" data-aos="fade-left">
          <div class="relative aspect-square">
            <%= image_tag "hero.png", class: "rounded-3xl object-cover shadow-2xl w-full h-full" %>
            <div class="absolute inset-0 rounded-3xl bg-gradient-to-tr from-primary/20 to-transparent"></div>
            
            <!-- Floating Elements -->
            <div class="hidden md:block absolute -top-4 -right-4 w-24 h-24 bg-primary/20 rounded-xl backdrop-blur-xl animate-float sm-hide-animation"></div>
            <div class="hidden md:block absolute -bottom-4 -left-4 w-32 h-32 bg-primary/10 rounded-full backdrop-blur-xl animate-float-delay sm-hide-animation"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Skills Section -->
  <div class="py-24 bg-white" id="skills">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-4 mb-16" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-gray-900">
          <%= t('home.skills.title') %>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          <%= t('home.skills.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Machine Learning -->
        <div class="group p-8 rounded-2xl bg-gray-50 hover:bg-white hover:shadow-xl transition-all" data-aos="fade-up">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
            <i class="fas fa-brain text-2xl text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('home.skills.machine_learning.title') %></h3>
          <p class="text-gray-600 mb-6"><%= t('home.skills.machine_learning.description') %></p>
          <div class="flex flex-wrap gap-2">
            <% t('home.skills.machine_learning.skills').each do |skill| %>
              <span class="px-3 py-1 rounded-full text-sm bg-primary/10 text-primary"><%= skill %></span>
            <% end %>
          </div>
        </div>

        <!-- Computer Vision -->
        <div class="group p-8 rounded-2xl bg-gray-50 hover:bg-white hover:shadow-xl transition-all" data-aos="fade-up" data-aos-delay="100">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
            <i class="fas fa-eye text-2xl text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('home.skills.computer_vision.title') %></h3>
          <p class="text-gray-600 mb-6"><%= t('home.skills.computer_vision.description') %></p>
          <div class="flex flex-wrap gap-2">
            <% t('home.skills.computer_vision.skills').each do |skill| %>
              <span class="px-3 py-1 rounded-full text-sm bg-primary/10 text-primary"><%= skill %></span>
            <% end %>
          </div>
        </div>

        <!-- Data Science -->
        <div class="group p-8 rounded-2xl bg-gray-50 hover:bg-white hover:shadow-xl transition-all" data-aos="fade-up" data-aos-delay="200">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
            <i class="fas fa-chart-line text-2xl text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('home.skills.data_science.title') %></h3>
          <p class="text-gray-600 mb-6"><%= t('home.skills.data_science.description') %></p>
          <div class="flex flex-wrap gap-2">
            <% t('home.skills.data_science.skills').each do |skill| %>
              <span class="px-3 py-1 rounded-full text-sm bg-primary/10 text-primary"><%= skill %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Work -->
  <div class="py-24 bg-gray-50" id="work">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-4 mb-16" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-gray-900">
          <%= t('home.work.title') %>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          <%= t('home.work.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-6">
        <% repeater :featured_projects do |project| %>
          <div class="group relative rounded-2xl overflow-hidden bg-white shadow-lg hover:shadow-xl transition-all" data-aos="fade-up">
            <div class="aspect-video bg-gray-100 relative overflow-hidden">
              <%# <%= image_tag project.image %>
              <%= project.content.image_tag(:image, {}, {class: 'image'}) %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            </div>
            <div class="p-8">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">
                <%= project.content.html :headline %>
              </h3>
              <span class="text-gray-500 text-sm"> <%= project.content(:date_place) %> </span>
              <p class="text-gray-600 mb-6">
                <%= project.content(:body).truncate(150).html_safe %>
              </p>
              <div class="flex items-center text-primary font-medium mt-5">
                <a href="<%= project.content(:link) %>"><%= t('home.work.learn_more') %></a>
                <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics Section -->
  <div class="relative py-24 bg-white overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center space-y-4 mb-16" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-gray-900">
          <%= t('home.stats.title') %>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          <%= t('home.stats.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        <% ['clients', 'years', 'hours', 'projects'].each do |stat| %>
          <div class="text-center space-y-2 p-8 rounded-2xl bg-white shadow-lg hover:shadow-xl transition-all" data-aos="fade-up">
            <div class="text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-dark">
              <%= t("home.stats.#{stat}.count") %>
            </div>
            <div class="text-gray-600 font-medium">
              <%= t("home.stats.#{stat}.label") %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Floating Elements -->
      <div class="hidden md:block absolute -bottom-4 -right-4 w-24 h-24 bg-primary/20 rounded-xl backdrop-blur-xl animate-float"></div>
      <div class="hidden md:block  absolute -top-4 -left-4 w-32 h-32 bg-primary/10 rounded-full backdrop-blur-xl animate-float-delay"></div>
    </div>
  </div>

  <!-- Testimonials Section -->
  <div class="relative py-24 bg-gray-50 overflow-hidden" id="testimonials">
    <!-- Background Pattern -->
    <div class="absolute inset-0">
      <div class="absolute inset-0  opacity-50"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center space-y-4 mb-16" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-gray-900">
          <%= t('home.testimonials.title') %>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          <%= t('home.testimonials.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% repeater :reviews do |review| %>
          <div class="card-hover bg-white p-8 rounded-2xl shadow-lg" data-aos="fade-up" data-aos-delay="100">
            <!-- Quote Icon -->
            <div class="mb-6">
              <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center icon-hover">
                <i class="fas fa-quote-right text-xl text-primary"></i>
              </div>
            </div>

            <!-- Testimonial Content -->
            <blockquote class="text-gray-600 italic mb-6">
              <%= review.content.html :body %>
            </blockquote>

            <!-- Author Info -->
            <div class="flex items-center gap-4 mt-auto">
              <div class="w-14 h-14 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center">
                <span class="text-xl font-bold text-white"><%= review&.content(:name)&.split&.map { |n| n[0] }.join %></span>
              </div>
              <div>
                <div class="font-semibold text-gray-900"><%= review&.content(:name) %></div>
                <div class="text-sm text-primary"><%= review&.content(:company_position) %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Floating Elements -->
      <div class="hidden md:block absolute -bottom-8 -right-8 w-32 h-32 bg-primary/10 rounded-full backdrop-blur-xl animate-float"></div>
      <div class="hidden md:block absolute top-1/4 -left-8 w-24 h-24 bg-primary/20 rounded-xl backdrop-blur-xl animate-float-delay"></div>
    </div>
  </div>

  <!-- Recent Events Section -->
  <div class="relative py-24 bg-white overflow-hidden" id="events">
    <!-- Background Pattern -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] opacity-50"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center space-y-4 mb-16" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-gray-900">
          <%= t('home.events.title') %>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          <%= t('home.events.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% t('home.events.events').each_with_index do |event, index| %>
          <div class="card-hover group bg-white rounded-2xl shadow-lg overflow-hidden" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
            <!-- Event Header -->
            <div class="relative h-48 bg-gradient-to-br from-primary to-primary-dark p-6 flex flex-col justify-end">
              <!-- Event Icon -->
              <div class="absolute top-4 right-4 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-xl flex items-center justify-center">
                <i class="fas fa-calendar-alt text-xl text-white"></i>
              </div>
              
              <!-- Event Date & Location -->
              <div class="text-white">
                <time class="text-lg font-semibold">
                  <%= Date.parse(event[:date]).strftime("%B %d, %Y") %>
                </time>
                <div class="text-white/80"><%= event[:location] %></div>
              </div>
            </div>

            <!-- Event Content -->
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-primary transition-colors">
                <%= event[:title] %>
              </h3>
              <p class="text-gray-600">
                <%= event[:description] %>
              </p>
            </div>

            <!-- Event Footer -->
            <div class="px-6 pb-6">
              <a href="#" class="inline-flex items-center text-primary font-medium hover:text-primary-dark transition-colors">
                Learn more
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Floating Elements -->
      <div class="hidden md:block absolute md:block absolute top-1/4 -right-8 w-24 h-24 bg-primary/20 rounded-xl backdrop-blur-xl animate-float-delay"></div>
    </div>
  </div>

  <!-- Contact Section -->
  <div class="py-24 bg-gray-50" id="contact">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="text-center space-y-4 mb-16" data-aos="fade-up">
          <h2 class="text-4xl font-bold text-gray-900">
            <%= t('home.contact.title') %>
          </h2>
          <p class="text-xl text-gray-600">
            <%= t('home.contact.subtitle') %>
          </p>
        </div>

        <%= form_with(url: '/contact', class: "space-y-6", local: true) do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :name, t('home.contact.form.name'), class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :name, class: "w-full px-4 py-3 rounded-xl border-gray-300 focus:border-primary focus:ring-primary" %>
            </div>

            <div>
              <%= f.label :email, t('home.contact.form.email'), class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.email_field :email, class: "w-full px-4 py-3 rounded-xl border-gray-300 focus:border-primary focus:ring-primary" %>
            </div>
          </div>

          <div>
            <%= f.label :message, t('home.contact.form.message'), class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :message, rows: 6, class: "w-full px-4 py-3 rounded-xl border-gray-300 focus:border-primary focus:ring-primary" %>
          </div>

          <div class="text-center">
            <%= f.submit t('home.contact.form.submit'), class: "inline-flex items-center px-8 py-4 bg-primary text-white rounded-xl font-medium hover:bg-primary-dark transition-all" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
