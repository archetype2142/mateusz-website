<div class="min-h-screen bg-white" data-controller="events">
  <!-- Hero Section -->
  <div class="relative py-24 bg-gradient-to-br from-gray-900 to-gray-800">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center" data-aos="fade-up">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8">
          Events & Talks
        </h1>

        <p class="text-xl text-gray-300 max-w-2xl mx-aut text-white">
          <%= content(:body).html_safe %>
        </p>
      </div>
    </div>
  </div>

  <!-- Events Section -->
  <div class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- 2024 Events -->
      <div class="mb-24">
        <div class="text-center mb-16" data-aos="fade-up">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">2024</h2>
          <p class="text-lg text-gray-600">Upcoming and recent events</p>
        </div>

        <div class="space-y-12">
          <!-- Event -->
          <% repeater :repeater do |event| %>
            <div class="bg-gray-50 rounded-2xl p-8 shadow-lg" data-aos="fade-up">
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="mb-6 lg:mb-0">
                  <div class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
                    <span><%= event.content.html :date_place %></span>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-2"> <%= event.content.html :headline %></h3>
                  <p class="text-gray-600">
                    <%= event.content.html :line %>
                  </p>
                </div>
                <div class="flex items-center space-x-4">
                  <a href="#" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 transition-colors">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
