<% content_for(:header) do %>
  <div class="header-block">
    <div class="header-content">
      <div class="flex items-center justify-between">
        <h1 class="text-xl md:text-4xl"><%= t('spina.form_submissions.title') %></h1>
      </div>
    </div>
  </div>
<% end %>

<div class="p-6 bg-white rounded shadow">
  <% if @form_submissions.any? %>
    <table class="w-full">
      <thead>
        <tr class="text-left border-b">
          <th class="pb-3 font-medium">Name</th>
          <th class="pb-3 font-medium">Email</th>
          <th class="pb-3 font-medium">Submitted at</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @form_submissions.each do |submission| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="py-3"><%= submission.name %></td>
            <td class="py-3"><%= submission.email %></td>
            <td class="py-3"><%= l submission.created_at, format: :short %></td>
            <td class="py-3 text-right">
              <%= link_to "View", spina.admin_form_submission_path(submission), class: "text-blue-500 hover:text-blue-700" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="mt-4">
	  <%= paginate @form_submissions %>
    </div>
  <% else %>
    <p class="text-center py-6 text-gray-500">No form submissions yet.</p>
  <% end %>
</div>
